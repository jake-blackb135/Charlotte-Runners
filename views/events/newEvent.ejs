<%- include('../partials/header.ejs')%>

    
        <div>
            <form action="/events"  enctype="multipart/form-data" method='POST'>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Category</label>
                    <select class="form-control" name="category" id="category">
                      <option>Races</option>
                      <option>Training buddy</option>
                    </select>
                  </div>
                <div class="form-group">
                  <label for="title">Title</label>
                  <input type="text" class="form-control" id="title" name="title" placeholder="Event title" required>
                </div>
                <div class="form-group">
                    <label for="details">Details</label>
                    <input type="text" class="form-control" id="details" name="details" placeholder="Description" required>
                  </div>
                  <div class="form-group">
                    <label for="start">Start</label>
                    <input type="datetime-local" class="form-control" name="start" id="start" required>
                  </div>
                  <div class="form-group">
                    <label for="end">End</label>
                    <input type="datetime-local" class="form-control" name="end" id="end" required>
                  </div>
                 
                  <div class="form-group">
                    <label for="Image">Event image</label>
                    <input type="file" class="form-control-file" name="Image" id="Image" accept="image/*" required>

                    
                  <button type="submit" value="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>
    </main>

    <%- include('../partials/footer.ejs') %>